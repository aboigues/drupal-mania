{#
/**
 * @file
 * Template pour les nodes (contenus)
 *
 * Variables disponibles:
 * - node: L'entité node complète
 * - content: Le contenu rendu du node
 * - label: Le titre du node
 * - url: L'URL du node
 * - view_mode: Le mode d'affichage (full, teaser, etc.)
 * - created: Date de création formatée
 */
#}
<article{{ attributes.addClass('node', 'node--type-' ~ node.bundle|clean_class, view_mode ? 'node--view-mode-' ~ view_mode|clean_class) }}>

  {% if not page %}
    <header class="node-header">
      {{ title_prefix }}
      <h2{{ title_attributes.addClass('node-title') }}>
        <a href="{{ url }}" rel="bookmark">{{ label }}</a>
      </h2>
      {{ title_suffix }}
    </header>
  {% else %}
    {{ title_prefix }}
    <h1{{ title_attributes.addClass('node-title') }}>
      {{ label }}
    </h1>
    {{ title_suffix }}
  {% endif %}

  {% if display_submitted %}
    <div class="node-meta">
      <span class="node-author">
        {{ 'By'|t }} {{ author_name }}
      </span>
      <span class="node-date">
        {{ 'on'|t }} {{ created }}
      </span>
    </div>
  {% endif %}

  <div{{ content_attributes.addClass('node-content') }}>
    {{ content }}
  </div>

</article>
